<UserControl x:Class="TRACKIT_1._1.VIEWS.HistorialAsistencia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRACKIT_1._1.VIEWS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <DataGrid x:Name="dgHistorial" AutoGenerateColumns="True" Height="250" SelectionMode="Extended" Margin="83,100,83,100"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button Content="Editar" Width="100" Background="#00379D" Foreground="white" />
            <Button Content="Eliminar" Width="100"  Margin="10,0,10,0" Foreground="White" Background="IndianRed"/>
            <Button Content="Generar Reporte" Width="150" Background="#00379D" Foreground="White"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="129,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                    Text="Historial de Asistencia" Foreground="#00379D" FontSize="16" FontWeight="Bold"/>
    </Grid>
</UserControl>
