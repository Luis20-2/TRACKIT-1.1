<Window x:Class="TRACKIT_1._1.VIEWS.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRACKIT_1._1.VIEWS"
        mc:Ignorable="d"
        Title="Registro" Height="500"
        Width="350"
        Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="66"/>
                <RowDefinition Height="85"/>
                <RowDefinition Height="42"/>
                <RowDefinition Height="41.133"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="66"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <TextBlock Text="TRACKIT" HorizontalAlignment="Left" FontSize="30" FontWeight="UltraBlack" Foreground="Black" Margin="106,12,0,13"
                   FontFamily="Goudy Old Style" Grid.Column="0" Width="133"/>
            <Image Source="/IMG/ima/Logo.jpeg" HorizontalAlignment="Left" Margin="40,0,0,0" Width="66" />
            <Button Content="X" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Width="30" 
                    Height="30" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Margin="0,10,10,0"
                    Click="Cancelar_Click"/>

            <TextBlock Text="El mejor programa para control y seguimiento acompañanos a este nuevo comiezo" 
                    HorizontalAlignment="Center" 
                    FontSize="8" 
                    FontWeight="DemiBold" 
                    Foreground="Black" 
                    Margin="0,5,0,40"
                    Grid.Row="1"
                    Width="298"/>

            <TextBlock Text="Registro"
                    Background="Transparent" 
                    HorizontalAlignment="Left" 
                    FontSize="15"
                    FontWeight="Black"
                    Foreground="Black" 
                    Margin="50,30,0,5"
                    Grid.Row="1"
                    Width="120"/>

            <!-- Este es el cuandro de texto el cual se usara para poner el correo electronico-->

            <TextBox x:Name="txtCorreo"
                    Grid.Row="2" 
                    FontFamily="Monserrat"
                    Tag="Correo electronico"
                    BorderBrush="DarkGray"
                    Margin="50,0,70,39" 
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus"
                    Loaded="TextBox_Loaded"
                    />
            <!-- Este es el cuandro de texto el cual se usara para poner la contraseña-->
            <TextBox x:Name="txtPassword1"
                    Grid.Row="2" 
                    FontFamily="Monserrat"
                    Tag="Contraseña de 6 a 16 diogitos"
                    BorderBrush="DarkGray"
                    Margin="50,39,70,0" 
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus"
                    Loaded="TextBox_Loaded"
                    />
            <!-- Este es el cuandro de texto se usara para confirmar la contraseña-->
            <TextBox x:Name="txtPassword2"
                     Grid.Row="3"
                     Tag="Confirmar Contraseña"
                     BorderBrush="DarkGray"
                     Margin="50,16,70,43"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     Loaded="TextBox_Loaded"
                     />
            <!-- Este es el cuandro de texto el cual se usara para poner el codigo de confirmacion-->
            <TextBox x:Name="txtCorreoConfirmacion"
                     Grid.Row="3"
                     Tag="Introduzca el codigo de confirmacion"
                     BorderBrush="DarkGray"
                     Margin="50,51,157,8"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     Loaded="TextBox_Loaded"
                     
                     
                />
            <!-- Este boton sera para enviar el codigo de confirmacion-->
            <Button x:Name="txtCorreoConfirmacion_Copiar"
                    Grid.Row="3"
                    Content="Obtener Codigo"
                    BorderBrush="DarkGray"
                    Background="Transparent"
                    Margin="211,51,70,8"
                    FontSize="8"
                     />


            <!--Este boton sera para confirmar el codigo-->
            <Button Grid.Row="4"
                     Content="Confirmacion"
                     FontSize="15"
                     Margin="34,5,201,5"
                     Background="DodgerBlue"
                     Foreground="White" Click="Button_Confirmacion"/>
            <!-- este boton es para regresar al inicio y iniciar sesion con una cuenta existente-->
            <Button Grid.Row="4"
                     Content="Iniciar sesiòn con una cuenta existente"
                     FontSize="9"
                     Margin="162,0,14,0"
                     Background="Transparent"
                     Foreground="DodgerBlue" 
                     Click="Button_Existente"
                     FontWeight="Black"
                     BorderThickness="0" Height="16" VerticalAlignment="Center"/>

            <TextBlock Text="Ayuda" Grid.Row="7" HorizontalAlignment="Left" Margin="10,10,0,44" FontSize="10" Width="28" RenderTransformOrigin="0.479,0.394"/>
            <TextBlock Text="Privacidad" Grid.Row="7" HorizontalAlignment="Left" Margin="120,10,0,44" FontSize="10" Width="45"/>
            <TextBlock Text="Terminos y Condiciones" Grid.Row="7" HorizontalAlignment="Left" Margin="221,10,0,44" FontSize="10" Width="104"/>
            <TextBlock Text="  2025 Desarrollo de Software" Grid.Row="8" HorizontalAlignment="Center" Margin="0,19,0,0" FontSize="8" Width="104"/>
            <TextBlock Text="©" Grid.Row="8" HorizontalAlignment="Left" Margin="106,19,0,0" FontSize="12" Width="11"/>



        </Grid>



    </Grid>
</Window>
